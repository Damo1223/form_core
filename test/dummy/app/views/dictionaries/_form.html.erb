<%= form_with(model: dictionary, local: true) do |f| %>
  <% if dictionary.errors.any? %>
    <article class="message is-danger">
      <div class="message-header">
        <p>
          <%= pluralize(dictionary.errors.count, "error") %> prohibited this form from being saved:
        </p>
      </div>
      <div class="message-body">
        <% dictionary.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
      </div>
    </article>
  <% end %>

  <div class="field">
    <%= f.label :scope, class: 'label' %>
    <p class="control">
      <%= f.text_field :scope, class: 'input', required: true %>
    </p>
  </div>

  <div class="field">
    <%= f.label :value, class: 'label' %>
    <p class="control">
      <%= f.text_field :value, class: 'input', required: true %>
    </p>
  </div>

  <div class="field is-grouped">
    <p class="control">
      <%= f.submit class: 'button is-primary' %>
    </p>
    <p class="control">
      <%= link_to 'Back', url_for(:back), class: 'button is-link' %>
    </p>
  </div>
<% end %>
